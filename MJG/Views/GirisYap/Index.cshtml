<body>
    <h1>Mert Güney</h1>
    <div class=" w3l-login-form">
        <h2>Giriş Yap</h2>
        @using (Html.BeginForm("Index", "GirisYap", FormMethod.Post))
        {
            <div class=" w3l-form-group">
                <label>Username:</label>
                <div class="group">
                    <i class="fas fa-user"></i>
                    <input type="text" class="form-control" placeholder="Username" required="required" name="kullaniciAdi" />
                </div>
            </div>
            <div class=" w3l-form-group">
                <label>Password:</label>
                <div class="group">
                    <i class="fas fa-unlock"></i>
                    <input type="password" class="form-control" placeholder="Password" required="required" name="sifre" />
                </div>
            </div>
            <button type="submit">Login</button>

        }
    </div>
    <footer>
        <p class="copyright-agileinfo"> &copy; 2020 Mert Güney<a href="#"></a></p>
    </footer>

</body>

